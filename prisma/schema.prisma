generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fullpath    String
  title       String
  description String?
  backdrop    String?
  poster      String?
  seen        Boolean  @default(false)
}

model Show {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  backdrop    String?
  poster      String?
  seen        Boolean  @default(false)
  seasons     Season[]
}

model Season {
  id          String    @id
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String?
  description String?
  poster      String?
  number      Int?
  seen        Boolean   @default(false)
  show        Show?      @relation(fields: [showId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  showId      String?
  episodes    Episode[]
}

model Episode {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fullpath    String
  title       String?
  description String?
  still       String?
  number      Int?
  seen        Boolean  @default(false)
  season      Season?   @relation(fields: [seasonId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  seasonId    String?
}
