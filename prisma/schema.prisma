generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fullpath    String
  title       String
  description String?
  backdrop    String?
  poster      String?
  seen        Boolean  @default(false)
}
